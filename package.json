{
  "name": "zplatform",
  "version": "1.0.0",
  "description": "This project is part of Irembo system design interview",
  "main": "app.js",
  "scripts": {
    "build": "babel src -d dist",
    "dev": "better-npm-run dev",
    "prod": "better-npm-run prod",
    "test": "better-npm-run test",
    "start": "npm run build && better-npm-run prod"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon --exec babel-node ./src/server",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "prod": {
      "command": "nodemon --exec babel-node ./src/server",
      "env": {
        "NODE_ENV": "production",
        "PORT": 8000
      }
    },
    "test": {
      "command": "nyc --reporter=html --reporter=text mocha --require @babel/register ./src/tests/* --timeout 10000 --exit || true",
      "env": {
        "NODE_ENV": "test",
        "PORT": 5000
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tjeaneric/ZPlatform.git"
  },
  "author": "Jean eric TUYISHIMIRE",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tjeaneric/ZPlatform/issues"
  },
  "homepage": "https://github.com/tjeaneric/ZPlatform#readme",
  "dependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/node": "^7.18.10",
    "bcryptjs": "^2.4.3",
    "better-npm-run": "^0.1.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.5.1",
    "helmet": "^5.1.1",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.5.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.8",
    "otp-generator": "^4.0.0",
    "password-validator": "^5.3.0",
    "twilio": "^3.80.1",
    "validator": "^13.7.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@babel/node": "^7.18.10",
    "@babel/plugin-transform-runtime": "^7.18.10",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.18.10",
    "@babel/register": "^7.18.9",
    "@babel/runtime": "^7.18.9",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
